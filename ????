import java.util.Scanner;
public class Attendance2ulit {

    static int[] ArrayKo = {15, 30, 25, 19, 30, 40};
    public static void main(String[] args) {

        // Opens scanner that will allow the user to input an element
        ShowMe();
        Scanner sc = new Scanner(System.in);

        while (!ArrayCheck()) {
            System.out.println("Enter an element to delete: ");
            int nomnom = sc.nextInt();

            find(nomnom);
            call(nomnom);
            ShowMe();
    }
        System.out.println("Array is Empty.");
    }

    // METHODS - the actions that perform operations on a variable.
    // IF conditions sets the specifications for when the array can be considered true
    // This method prints the elements of the array
    static void ShowMe() {
        for (int a = 0; a < ArrayKo.length; a++){
            if (ArrayKo[a] > 0) {
                System.out.print(ArrayKo[a] + " ");
            }
        }
        System.out.println("");
    }

    // Locates the target element in the array
    static void find(int nomnom) {
        for (int b = 0; b < ArrayKo.length; b++){
            if (nomnom == ArrayKo[b]) {
                ArrayKo[b] = 0;
            }
        }
    }

    // Checks if the array's condition is true
    static boolean ArrayCheck() {
        int ArrayCheck = 0;
        for (int c = 0; c < ArrayKo.length; c++) {
            if (ArrayKo[c] != 0) {
                continue;
            } else {
                ArrayCheck++;
            }
            if (ArrayCheck == 6) {
                return true;
            } else {
            }
        }
        return false;
    }

    // Checks if the input matches the given elements in the array
        static void call (int nomnom) {
            if(!( nomnom == 15 || nomnom == 30 || nomnom == 25 || nomnom == 19 || nomnom == 30 || nomnom == 40 )){
                System.out.println("Invalid Element!");
            }
        }
    }


